{
  "name": "chef-api",
  "version": "1.0.0",
  "description": "chef api",
  "main": "server.js",
  "scripts": {
    "apidoc": "apidoc -i api/routes/ -o public/apidoc/",
    "build": "tsc",
    "clean": "rm -rf build",
    "start": "NODE_ENV=production node build/api/server.js",
    "setup": "DEBUG=chef:* NODE_ENV=development ./scripts/setup_db.js",
    "start-dev": "DEBUG=chef:* NODE_ENV=development nodemon",
    "test": "nyc  mocha --timeout=1000"
  },
  "nyc": {
    "include": [
      "api/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "apidoc": {
    "title": "Poc-Chef API",
    "version": "1.0.0",
    "description": "Poc Chef API Docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/ksjsgroup/poc-chef-backend.git"
  },
  "author": "Ivan Sabido <ivan.sabido@ksquareinc.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://gitlab.com/ksjsgroup/poc-chef-backend/issues"
  },
  "homepage": "https://gitlab.com/ksjsgroup/poc-chef-backend#readme",
  "devDependencies": {
    "@types/boom": "^7.2.1",
    "@types/chai": "^4.1.7",
    "@types/chai-http": "^3.0.5",
    "@types/cors": "^2.8.4",
    "@types/debug": "^4.1.2",
    "@types/express": "^4.16.1",
    "@types/helmet": "0.0.42",
    "@types/joi": "^14.3.2",
    "@types/mocha": "^5.2.6",
    "@types/moment-timezone": "^0.5.10",
    "@types/uuid": "^3.4.4",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "sinon": "^7.2.2",
    "source-map-support": "^0.5.10",
    "standard": "^12.0.1",
    "supertest": "^3.3.0",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "bcrypt": "^3.0.3",
    "bcrypt-promise": "^2.0.0",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "boom": "^7.3.0",
    "chalk": "^2.4.1",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-slash": "^2.0.1",
    "helmet": "^3.15.0",
    "inquirer": "^6.2.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.4.0",
    "moment": "^2.23.0",
    "moment-timezone": "^0.5.23",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.8.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.42.0",
    "uuid": "^3.3.2"
  }
}
